{
  "name": "biohacking",
  "version": "1.0.0",
  "engines": {
    "node": "7.2.0"
  },
  "description": "Biohacking",
  "main": "server.js",
  "scripts": {
    "postinstall": "node install_production.js",
    "db:create": "node_modules/.bin/create_database",
    "db:drop": "node_modules/.bin/drop_database",
    "db:reset": "npm run db:drop && npm run db:create && sequelize db:migrate && sequelize db:seed:all",
    "start": "nf start -p $PORT",
    "dev": "nf start -p 3000 --procfile Procfile.dev",
    "server": "node --harmony-async-await server",
    "server:dev": "nodemon --harmony-async-await server",
    "server:debug": "nodemon --harmony-async-await --debug-brk --inspect server",
    "eslint": "eslint ./client/src --ext .jsx --ext .js",
    "spec:api": "NODE_ENV=test mocha test/server/**/*-test.js --timeout 10000",
    "spec": "cross-env NODE_ENV=test mocha -w test/client/src/dev.setup.js test/client/src/**/*-test.js",
    "test": "cross-env NODE_ENV=test mocha test/client/src/dev.setup.js test/client/src/**/*-test.js",
    "spec:cov": "nyc --reporter=html npm test"
  },
  "author": "Insystem",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.15.2",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.3",
    "elasticsearch": "^12.1.0",
    "express": "^4.14.0",
    "express-session": "^1.14.1",
    "foreman": "^2.0.0",
    "le_node": "^1.6.8",
    "moment": "^2.15.2",
    "morgan": "^1.7.0",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "pg": "^6.1.0",
    "pg-hstore": "^2.3.2",
    "sendgrid": "^4.7.1",
    "sequelize": "^3.24.6",
    "sequelize-cli": "^2.4.0",
    "sequelize-migration-pg-extras": "github:cmilfont/sequelize-migration-pg-extras",
    "serve-favicon": "^2.3.0",
    "uuid": "^2.0.3",
    "winston": "^2.3.0"
  },
  "devDependencies": {
    "babel": "^6.5.2",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.9",
    "babel-plugin-istanbul": "2.0.3",
    "babel-plugin-resolver": "^1.1.0",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.1",
    "chai": "3.5.0",
    "chai-http": "^3.0.0",
    "cross-env": "3.1.3",
    "enzyme": "2.6.0",
    "eslint": "^3.10.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-config-standard-react": "^4.2.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-react": "^6.7.1",
    "eslint-plugin-standard": "^2.0.1",
    "fetch-mock": "5.5.0",
    "gherkin": "^4.0.0",
    "istanbul": "1.0.0-alpha.2",
    "jsdom": "9.8.3",
    "mocha": "3.2.0",
    "nodemon": "^1.11.0",
    "nyc": "8.4.0",
    "react": "^15.4.1",
    "react-addons-test-utils": "^15.4.1",
    "react-dom": "^15.4.1",
    "redux": "^3.6.0",
    "redux-saga": "^0.13.0",
    "sinon": "^1.17.6",
    "supertest": "^2.0.1",
    "webpack": "^1.14.0"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false
  }
}
